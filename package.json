{
  "name": "the-software-essentialist-course-ddd-forum-best-practices-first",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "prisma:generate": "prisma generate --schema=./src/infra/prisma/schema.prisma",
    "migrate": "prisma db push --schema=./src/infra/prisma/schema.prisma",
    "start:docker:db": "docker-compose up --build -d",
    "start:dev": "npm run start:docker:db && cross-env NODE_ENV=development npm run prisma:generate && npx dotenv-cli -e .env.development npm run migrate && cross-env NODE_ENV=development nodemon",
    "start": "npm run build && node dist/index.mjs",
    "lint": "eslint \"src/**/*.@(ts|mts)\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:unit": "cross-env NODE_ENV=development jest -c jest.config.unit.ts",
    "test:unit:dev": "cross-env NODE_ENV=development jest -c jest.config.unit.ts --watchAll",
    "test:infra": "cross-env NODE_ENV=development jest -c jest.config.infra.ts",
    "test:infra:dev": "cross-env NODE_ENV=development jest -c jest.config.infra.ts --watchAll",
    "test:e2e": "cross-env NODE_ENV=development jest -c jest.config.e2e.ts",
    "test:e2e:dev": "cross-env NODE_ENV=development jest -c jest.config.e2e.ts --watchAll"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "bcrypt": "^5.1.0",
    "fastify": "^4.21.0",
    "jsonwebtoken": "^9.0.1",
    "query-string": "^8.1.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.6",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.6.2",
    "jest-cucumber": "^3.0.1",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "prisma": "^5.1.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "undici": "^5.23.0"
  }
}
